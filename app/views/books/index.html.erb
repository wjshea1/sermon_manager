<h1>Listing books</h1>

<table>
  <tr>
    <th>Book Name</th>
    <th>Chapter Count</th>
    <th>Testament</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td> <%= book.name %></td>
    <td> <%=  book.chapter_count %></td>
    <td> <%= book.testament %></td>
    <td><%= link_to 'Show', book %></td>

    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

