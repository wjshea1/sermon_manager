<h1>Listing sermons</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
	<th>Speaker</th>
	<th>Keywords</th>
    <th>Image url</th>
    <th>Audio url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sermons.each do |sermon| %>
  <tr class="<% cycle('list_line_odd', 'list_line_even') %>">
    <td><%= sermon.title %></td>
    <td class="list_description"><%= sermon.description %></td>
    <td><%= sermon.speaker %></td>
    <td><%= sermon.keywords %></td>
    <td><%= sermon.image_url %></td>
    <td><%= sermon.audio_url %></td>
    <td><%= link_to 'Show', sermon %></td>
    <td><%= link_to 'Edit', edit_sermon_path(sermon) %></td>
    <td><%= link_to 'Destroy', sermon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

